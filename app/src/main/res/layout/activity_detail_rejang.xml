<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailRejangActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="40dp"
        app:cardBackgroundColor="#e4e4e4"
        app:cardCornerRadius="14dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="40dp">


        <TextView
            android:id="@+id/tctbhsRejang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_horizontal"
            android:text="Teks Rejang"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/linee"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="60dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/txtBhsIndo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center_horizontal"
            android:text="Bahasa Indonesia"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/tv_lafalrejang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal"
            android:text="Pel;afa'lan"
            android:textSize="19sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_kelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="126dp"
            android:gravity="center_horizontal"
            android:text="Kelas Kata"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>